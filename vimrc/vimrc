" My vimrc file
"
" Maintainer:	Simon Xu<xixu@paypal.com>
" Last change:	2010 Jul 31

" general
filetype plugin on
filetype indent on
set number
set showcmd
set hidden
set autochdir
set incsearch
set hlsearch
set nobackup
set showmatch
set wildmenu
set ignorecase
set infercase
set notextmode
set autoread
set backspace=indent,eol,start
syntax on
map <space> <c-f>

" look and feel
" gui
if has("gui_running")
	set mouse=a
	set go=cegrLtbm
	let $lang = "en_US"
	set langmenu=en_US
	source $VIMRUNTIME/delmenu.vim
	source $VIMRUNTIME/menu.vim
	set laststatus=2
	set statusline=%<%F%h%m%r%h%w%y\ %=\|%{&ff}\|Ln:\ %l\ Col:\ %c
else
	let &t_Co=256
	"colorscheme slate
endif

set cursorline
hi Cursorline cterm=NONE ctermbg=lightgray guibg=lightcyan

" text format
if has("win32")
	set gfn=Consolas:h11:cANSI
else
	set gfn=Consolas\ 11
endif

set nowrap
set tabstop=4
set shiftwidth=4
set autoindent
set smartindent

" spell check
set spelllang=en
set spellsuggest=5

" autocomplete
set complete=.,t,d,i
set completeopt=menu,menuone

" ctags
let Tlist_Show_One_file = 1
let Tlist_Exit_OnlyWindow = 1
let Tlist_Use_SingleClick = 1
let Tlist_GainFocus_On_ToggleOpen = 1
let Tlist_Process_File_Always = 0
map <F9> :!ctags -R<cr>
map <F2> :TlistToggle<cr>
